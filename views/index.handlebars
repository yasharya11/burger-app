<div class="container">
  <h1>Burgers!</h1>

  <div class="row">
    <div class="col-lg-6">
      <h2>Burgers that are not Eaten!</h2>

      <ul>
        {{#each burgers}} {{#unless eaten}} {{> burgers/burger-block eaten=1}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-lg-6">
      <h2>Eaten Burgers</h2>

      <ul>
        {{#each burgers}} {{#if eaten}} {{> burgers/burger-block eaten=0}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="eaten">Are you hungry?</label>
          <br>
          <input type="radio" name="eaten" value="0" checked> hElL yEaH bRo!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>